{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "noEmit": true,
        "paths": {
            "@server/*": [
                "src/*"
            ],
            "@shared/*": [
                "../shared/src/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*",
        "../shared/src/**/*"
    ],
}
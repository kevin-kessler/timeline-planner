{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "noEmit": true,
        "paths": {
            "@client/*": [
                "src/*"
            ],
            "@shared/*": [
                "../shared/src/*"
            ]
        },
        "types": [
            "pinia",
            "vite/client",
            "vue",
        ],
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*",
        "src/**/*.vue",
        "../shared/src/**/*",
        "env.d.ts",
        "components.d.ts"
    ],
}